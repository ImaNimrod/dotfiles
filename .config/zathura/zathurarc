# basic options
set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard

# invert colors by default
set recolor "true"

# vim-like keybinds
map u scroll half-up
map d scroll half-down

map r reload
map R rotate

map K zoom in
map J zoom out

map i recolor
map p print

map g goto top
map G goto bottom
