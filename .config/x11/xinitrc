# display configuration
############## INSERT YOUR XRANDR COMMANDS HERE ###############

# compositor
picom &

# notification server
dunst &

# statusbar
dwmstatus &

# fuck capslock
setxkbmap -option caps:none

# automatically run screen locker
xautolock -time 2 -locker slock

# set wallpaper
wallpaper

# execute dwm
while true; do
    dwm >/dev/null 2>&1
done
